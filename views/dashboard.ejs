<!DOCTYPE html>
<html lang="en">
  <%- include('includes/head') %>
  <body>
    <%- include('includes/header') %>

    <main>
      <% if (posts.length == 0) { %>
        <h4>Hello <%= user.username %>, vous n'avez encore posté aucune note !</h4>
        <% } else { %>
        <h4>Hello <%= user.username %>, voici vos Notes</h4>
        <% } %>
  
        <ul>
          <% posts.forEach(post => { %>
          <li>
            <a href="/post/<%= post.id %>"><%= post.title %></a> crée le  <%= new Date(post.createdDate).getMonth() + 1 %>/<%= new
            Date(post.createdDate).getDate() %>/<%= new Date(post.createdDate).getFullYear() %>
          </li>
          <% }) %>
        </ul>
    </main>

    <%- include('includes/footer') %>
  </body>
</html>
